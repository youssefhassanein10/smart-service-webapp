# Таблица товаров
cursor.execute('''
    CREATE TABLE IF NOT EXISTS products (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        article TEXT UNIQUE,  # Артикул товара
        name TEXT NOT NULL,
        description TEXT,
        price REAL NOT NULL,
        old_price REAL,  # Старая цена (для акций)
        photo_url TEXT,
        category TEXT,   # Категория товара
        stock INTEGER DEFAULT 0,  # Остаток на складе
        is_active BOOLEAN DEFAULT TRUE,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )
''')
